<% layout("/layouts/boilerplate.ejs") %>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h2>
        Create new Listing
      </h2>
      <form method="POST" action="/listing">
        <div>
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" type="text" placeholder="Enter your title" class="form-control">
        </div>
        <br />

        <div>
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" type="text" placeholder="Enter your description"
            class="form-control"></textarea>
        </div>
        <br />

        <div>
          <label for="image" class="form-label">Image link</label>
          <input name="listing[image]" type="text" placeholder="Enter image URL/Link" class="form-control">
        </div>
        <br />

        <div class="row">
          <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" type="number" placeholder="Enter your price" class="form-control">
          </div>
          <br />

          <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text" placeholder="Enter your country name" class="form-control">
          </div>
        </div>
        <br />
        <div>
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" type="text" placeholder="Enter your location name" class="form-control">
        </div>
        <br />
        <button class="btn btn-dark">Submit</button>
        <br /> <br />
      </form>
    </div>
  </div>